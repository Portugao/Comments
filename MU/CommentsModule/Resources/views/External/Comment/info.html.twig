<dt>{{ comment|mucommentsmodule_formattedTitle|notifyFilters('comments.filter_hooks.comments.filter')|safeHtml }}</dt>
{% if comment.text is not empty %}<dd>{{ comment.text }}</dd>{% endif %}
</dl>
